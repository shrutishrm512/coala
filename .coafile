[Default]
files = coalib/coala.py
ignore = tests/bearlib/languages/documentation/documentation_extraction_testdata/*.py,
tests/collecting/collectors_test_dir/bears/incorrect_bear.py,

max_line_length = 80
use_spaces = True

bears = l

[python]
# Patches may conflict with autopep8 so putting them in own section so they
# will be executed sequentially; also we need the LineLengthBear to double
# check the line length because PEP8Bear sometimes isn't able to correct the
# linelength.
bears = SpaceConsistencyBear, PyUnusedCodeBear, QuotesBear
language = Python
preferred_quotation = '

[autopep8]
bears = PEP8Bear

# Sometimes autopep8 makes too long lines, need to check after!

[linelength]
bears = LineLengthBear
ignore_length_regex = ^.*https?://

[DOCS]
bears = SpaceConsistencyBear, LineLengthBear

files = docs/**/*.rst, CONTRIBUTING.rst, README.rst
ignore = docs/API/**
ignore_length_regex = ^.*https?://

[languagetool]
enabled = False

bears = LanguageToolBear
files = docs/**/*.rst, CONTRIBUTING.rst, README.rst
ignore = docs/API/**
languagetool_disable_rules = EN_QUOTES,
WHITESPACE_RULE,
UPPERCASE_SENTENCE_START,
COMMA_PARENTHESIS_WHITESPACE,
DOUBLE_PUNCTUATION,
SENTENCE_WHITESPACE,
THE_PUNCT,
EN_A_VS_AN,
EN_UNPAIRED_BRACKETS,
ENGLISH_WORD_REPEAT_BEGINNING_RULE,
CD_NN,
SENT_START_CONJUNCTIVE_LINKING_ADVERB_COMMA,
SENTENCE_FRAGMENT,
ENGLISH_WORD_REPEAT_RULE,
POSSESIVE_APOSTROPHE
# `` for links in rst files
# Indents in code
# Sentences start with "coala"
# Confuses .coafile
# Used in `.. note::`
# Thinks coalib.xyz should have space
# Confused by symbols in code
# Mistakes variable `a` to be an article
# Confused with brackets in code
# Confuses itself in regex
# index -> indices
# Thinks headings are sentences
# Found in code
# Confused by directory name "objects"

[commit]
bears = GitCommitBear
shortlog_trailing_period = False
shortlog_regex = ([^:]*|[^:]+: [A-Z0-9*].*)

[Pylint]
enabled = False

bears = PyLintBear

pylint_cli_options = --ignore=CVS,cindex.py,tests
# Lots of functions don't need docstrings
pylint_disable = missing-docstring,
arguments-differ,
bad-builtin,
fixme,
locally-disabled,
no-member,
bad-continuation
# Some child classes need to change
# argument signature of a inherited function
# Pylint doesn't like most builting functions
# like filter, map etc. It prefers using for
# loops for everything - although sometimes
# map and other builtins are more intuitive.
# Already done using KeywordBear
# Without this a pylint pragma is also
# considered an issue
# Currently Pylint doesn't understand our enum()
# making a lot of false positives here
# Our indentation style guide is
# different from PEP

[LineCounting]
enabled = False

bears = LineCountBear
max_lines_per_file = 1000

[invalidlinks]
enabled = False
files = docs/**/*.rst
ignore = docs/API
bears = InvalidLinkBear

[TODOS]
enabled = False

bears = KeywordBear
language = python3

ci_keywords, keywords = \#TODO, \# TODO, \#FIXME, \# FIXME
cs_keywords = 
